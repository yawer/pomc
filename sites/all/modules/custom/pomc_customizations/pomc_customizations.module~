function get_children_html ($children, $taxonomy_name, $taxonomy_id){
$html_list = '<li class="primary-list" id="primary-category primary-'.$taxonomy_id[0].'" value = "'.$taxonomy_id[0].'">'.$taxonomy_name;
$html_list .='</li><ul class = "category-child-list-'.$taxonomy_id[0].'">';
foreach($children as $ctid => $childrenlist) {
$html_list .='<li class="secondary-list " id="secondary-category childof-'.$taxonomy_id[0].' secondary-'.$ctid.'" value ="'.$ctid.'">'.$childrenlist->name.'</li>';
}
$html_list .='</ul>'; 

return $html_list;
}

