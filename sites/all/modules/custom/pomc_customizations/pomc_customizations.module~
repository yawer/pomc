function get_like_count($nid) {
  $like = flag_get_flag('like');
  //$share = flag_get_flag('share');
$count = $like->get_count($nid);
//dpm($count);
return $count;
}

function get_share_count($nid) {
  //$like = flag_get_flag('like');
  $share = flag_get_flag('share');
$count = $share->get_count($nid);
return $count;
}
